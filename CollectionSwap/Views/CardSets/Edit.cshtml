@model CollectionSwap.Models.CardSet
@{
    ViewBag.Title = "Edit";
    string statusMessage = ViewBag.Status;
    IEnumerable<string> cardSet = ViewBag.Cards;
    var imageUrlList = ViewBag.ImageUrl as List<string>;
    var cardId = imageUrlList?[0];
    var imageUrl = imageUrlList?[1];
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "CardSets", FormMethod.Post, new { role = "form", @class = "d-flex flex-column align-items-center mt-5 mb-5" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group d-flex flex-row justify-content-center">
        @Html.Hidden("card_set_id", Model.card_set_id)
        @Html.EditorFor(model => model.card_set_name, new { htmlAttributes = new { @class = "form-control" } })
        <input class="btn btn-primary mx-1" type="submit" value="Update Card Set Name" />
    </div>
    <span class="text-success">@statusMessage</span>
}

<div class="d-flex gap-5 flex-wrap">
    @foreach (var card in cardSet.Select((value, i) => new { i, value }))
    {
        <div class="d-flex flex-column align-items-center">
            @(card.i + 1)
            @if (imageUrlList != null && Int32.Parse(cardId) == (card.i + 1))
            {
                <img src="@Url.Content(imageUrl)" />
            }
            else
            {
                <img src="~/Card_Sets/@Model.card_set_id/@card.value" />
            }
            <div class="d-flex gap-3">
                @using (Html.BeginForm("ChangeCard", "CardSets", new { cardSetId = @Model.card_set_id, cardId = card.i + 1 }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()
                    <label for="fileInput@(card.i + 1)" class="button-icon button-icon-upload"><i class="fa fa-upload"></i></label>
                    <input class="d-none" type="file" id="fileInput@(card.i + 1)" name="fileInput">
                }
                @using (Html.BeginForm("DeleteCard", "CardSets", new { cardSetId = @Model.card_set_id, cardId = @card.value }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()

                    <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa fa-trash"></i></button>
                }
            </div>
        </div>
    }
</div>

<div>
    <br />
    @Html.ActionLink("Back to List", "Index", "Manage")
</div>

<div>
    @using (Html.BeginForm("AddCard", "CardSets", new { cardSetId = @Model.card_set_id }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "mt-3" }))
    {
        @Html.AntiForgeryToken()
        <label for="cardCreateInput" class="add-card"><i class="fa fa-plus"></i></label>
        <input class="d-none" type="file" accept = ".png, .jpg" id="cardCreateInput" name="fileInput">
    }
</div>


@section scripts {
    <script>
        $(document).ready(function() {
            $("input[type='file']").on("change", function() {
                $(this).closest("form").submit();
                //console.log($(this).closest("form"));
            })
        });
    </script>
}