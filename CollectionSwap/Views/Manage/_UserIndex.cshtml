@model CollectionSwap.Models.IndexViewModel
<div>
    <h4>Your Collections</h4>
    <hr />
    <div class="d-flex gap-5">

        @foreach (var collection in Model.Collections)
        {
            <div class="d-flex flex-column align-items-center">
                @Html.ActionLink(@collection.Name, "Edit", "Collections", new { id = collection.Id }, new { @class = "card-set" })
                @using (Html.BeginForm("Delete", "Collections", new { collectionId = @collection.Id }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()

                    <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this set?')"><i class="fa fa-trash"></i></button>
                }
            </div>
        }

        <a class="card-set align-self-baseline" href="/Collections/Create"><i class="fa fa-plus"></i></a>
    </div>
</div>