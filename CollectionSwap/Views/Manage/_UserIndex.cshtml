@model CollectionSwap.Models.IndexViewModel
<div class="d-flex flex-column gap-5">
    <div class="secondary-container">
        <h4>Swap History</h4>
        <hr />
        <div class="d-flex gap-5">
            @Html.ActionLink("Your Past Swaps", "History", "Swap")
        </div>
    </div>
    <div class="secondary-container">
        <h4>Your Collections</h4>
        <hr />
        <div class="d-flex gap-5">

            @foreach (var userCollection in Model.UserCollections)
            {
                <div class="d-flex flex-column align-items-center">
                    @Html.ActionLink(userCollection.Name, "Edit", "UserCollections", new { id = userCollection.Id }, new { @class = "collection" })
                    @using (Html.BeginForm("Delete", "UserCollections", new { userCollectionId = userCollection.Id }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                    {
                        @Html.AntiForgeryToken()

                        <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this set?')"><i class="fa fa-trash"></i></button>
                    }
                </div>
            }

            <a class="collection align-self-baseline" href="/UserCollections/Create"><i class="fa fa-plus"></i></a>
        </div>
    </div>
</div>