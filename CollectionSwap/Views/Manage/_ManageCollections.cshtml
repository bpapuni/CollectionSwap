@model CollectionSwap.Models.IndexViewModel
<div class="secondary-container">
    <div class="secondary-container-header">
        <p>Manage Collections</p>
    </div>

    <div class="secondary-container-row">
        <div class="tertiary-container">
            @foreach (var collection in Model.Collections)
            {
                <div class="d-flex flex-column align-items-center">
                    <button class="collection" onclick="LoadPartial(@collection.Id, 'EditCollection')">@collection.Name</button>
                    @using (Html.BeginForm("Delete", "Collections", new { collectionId = @collection.Id }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                    {
                        @Html.AntiForgeryToken()

                        <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this set?')"><i class="fa fa-trash"></i></button>
                    }
                </div>
            }
            <div class="collection" onclick="LoadPartial(0, 'CreateCollection')"><i class="fa fa-plus"></i></div>
        </div>
    </div>
</div>

<div class="secondary-container partial" style="display: none">
    @* Load Partial Here *@
</div>