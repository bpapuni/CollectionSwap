@model CollectionSwap.Models.ManageCollectionsViewModel
<div class="secondary-container-row">
    <div id="manage-collections-container" class="secondary-container">
        <div class="secondary-container-header">
            <p>Manage Collections</p>
        </div>

        <div class="secondary-container-row">
            <div class="tertiary-container">
                @foreach (var collection in Model.Collections)
                {
                    <div class="d-flex flex-column align-items-center">
                        @{
                            var path = Url.Content($"~/Collections/Edit/{collection.Id}");
                        }
                        @*<a class="collection" href="@path">@collection.Name</a>*@
                        <button class="collection" onclick="LoadPartial(@collection.Id, 'EditCollection')">@collection.Name</button>
                        @using (Html.BeginForm("Delete", "Collections", new { collectionId = @collection.Id }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this set?')"><i class="fa fa-trash"></i></button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="create-collection-container" class="secondary-container">
        @Html.Partial("_CreateCollection", Model.NewCollection)
    </div>
    <div id="edit-collection-container" class="secondary-container partial">
    </div>
</div>

<script>
    $(document).on("submit", "#create-collection-container form", function (event) {
        event.preventDefault(); // Prevent the default form submission

        var formData = new FormData(this); // Serialize the form data

        $.ajax({
            url: '@Url.Action("Create", "Collections")',
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                $("#create-collection-container").html(result.PartialView);
                if (result.Reload) {
                    location.reload();
                }
            },
            error: function () {
                // Handle error
            }
        });
    });

    $(document).on("submit", "#update-name-form", function (event) {
        event.preventDefault(); // Prevent the default form submission

        var formData = new FormData(this); // Serialize the form data

        $.ajax({
            url: '@Url.Action("EditCollection", "Manage")',
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                var updatedContainer = $(result).find("#manage-collections-container").html();
                $("#manage-collections-container").html(updatedContainer);
            },
            error: function () {
                // Handle error
            }
        });
    });
</script>