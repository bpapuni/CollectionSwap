@model CollectionSwap.Models.ManageCollectionsViewModel
@using CollectionSwap.Models
@using Newtonsoft.Json
<div class="secondary-container">
    <div class="secondary-container-header">
        <p>Available Collections</p>
    </div>
    <div class="tertiary-container">
        @foreach (var collection in Model.Collections)
        {
            <div class="d-flex flex-column align-items-center">
                @using (Html.BeginForm("EditCollection", "Manage", new { Id = @collection.Id }, FormMethod.Get, new { role = "form", @class = "" }))
                {
                    @Html.AntiForgeryToken()
                }
                @{ 
                    var collectionButton = new CollectionButton
                    {
                        Id = collection.Id,
                        Name = collection.Name,
                        href = Url.Content($"/Manage/ManageCollections/{collection.Id}"),
                        ItemList = JsonConvert.DeserializeObject<List<string>>(collection.ItemListJSON)
                    };
                }
                @Html.Partial("_CollectionButton", collectionButton)

                @using (Html.BeginForm("DeleteCollection", "Manage", new { collectionId = @collection.Id }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()
                    <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this set?')"><i class="fa fa-trash"></i></button>
                }
            </div>
        }
    </div>
</div>