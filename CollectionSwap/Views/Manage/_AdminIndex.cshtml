@model CollectionSwap.Models.IndexViewModel
<div>
    <h4>Manage Card Sets</h4>
    <hr />
    <div class="d-flex gap-5">

        @foreach (var cardSet in Model.CardSets)
        {
            <div class="d-flex flex-column align-items-center">
                @Html.ActionLink(@cardSet.card_set_name, "Edit", "CardSets", new { id = cardSet.card_set_id }, new { @class = "card-set" })
                @using (Html.BeginForm("Delete", "CardSets", new { cardSetId = @cardSet.card_set_id }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()

                    <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this set?')"><i class="fa fa-trash"></i></button>
                }
            </div>
        }

        <a class="card-set align-self-baseline" href="/CardSets/Create"><i class="fa fa-plus"></i></a>
    </div>
</div>