@model CollectionSwap.Models.Collection
@{
    ViewBag.Title = "Edit";
    string statusMessage = ViewBag.Status;
    IEnumerable<string> collection = ViewBag.Items;
    var imageUrlList = ViewBag.ImageUrl as List<string>;
    var imageId = imageUrlList?[0];
    var imageUrl = imageUrlList?[1];
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "Collections", FormMethod.Post, new { role = "form", @class = "d-flex flex-column align-items-center mt-5 mb-5" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group d-flex flex-row justify-content-center">
        @Html.Hidden("Id", Model.Id)
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        <input class="btn btn-primary mx-1" type="submit" value="Update Collection Name" />
    </div>
    <span class="text-success">@statusMessage</span>
}

<div>
    @Html.ActionLink("Back to Dashboard", "Index", "Manage")
</div>

<div class="d-flex gap-5 flex-wrap">
    @foreach (var item in collection.Select((value, i) => new { i, value }))
    {
        <div class="d-flex flex-column align-items-center">
            @(item.i + 1)
            @if (imageUrlList != null && Int32.Parse(imageId) == (item.i + 1))
            {
                <img src="@Url.Content(imageUrl)" />
            }
            else
            {
                <img src="~/Collections/@Model.Id/@item.value" />
            }
            <div class="d-flex gap-3">
                @using (Html.BeginForm("EditItem", "Collections", new { collectionId = @Model.Id, itemId = @item.i + 1, fileName = @item.value }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()
                    <label for="fileInput@(item.i + 1)" class="button-icon button-icon-upload"><i class="fa fa-upload"></i></label>
                    <input class="d-none" type="file" id="fileInput@(item.i + 1)" name="fileInput">
                }
                @using (Html.BeginForm("DeleteItem", "Collections", new { collectionId = @Model.Id, fileName = @item.value }, FormMethod.Post, new { role = "form", @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()
                    <button class="button-icon button-icon-trash" type="submit" onclick="return confirm('Are you sure you want to delete this item?')"><i class="fa fa-trash"></i></button>
                }
            </div>
        </div>
    }
</div>

<div>
    <br />
    @Html.ActionLink("Back to Dashboard", "Index", "Manage")
</div>

<div>
    @using (Html.BeginForm("AddItem", "Collections", new { collectionId = @Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "mt-3" }))
    {
        @Html.AntiForgeryToken()
        <label for="addItemInput" class="add-item"><i class="fa fa-plus"></i></label>
        <input class="d-none" type="file" accept = ".png, .jpg" id="addItemInput" name="fileInput">
    }
</div>


@section scripts {
    <script>
        $(document).ready(function() {
            $("input[type='file']").on("change", function() {
                $(this).closest("form").submit();
            })
        });
    </script>
}