@if (Model == -1)
{
    <span class="new-swapper">New</span>
}
else
{
    <span class="swap-rating">
        @for (int i = 0; i < 5; i++)
        {
            if (i < Math.Floor(Model))
            {
                <i class="fa fa-star"></i>
            }
            else if (i < Math.Ceiling(Model))
            {
                <i class="fa-solid fa-star-half-alt"></i>
            }
            else
            {
                <i class="fa-regular fa-star"></i>
            }
        }
    </span>
}