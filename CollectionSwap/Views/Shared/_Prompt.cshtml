@model CollectionSwap.Models.PromptViewModel

<div class="prompt-container d-none" onclick="$(this).addClass('d-none')">
    <div class="prompt">
        <span class="header">@Model.Title</span>
        <div class="body">@Model.Body</div>
        <span class="controls">
            <button class="submit-button clear">Cancel</button>
            <button class="submit-button">Confirm</button>
        </span>
    </div>
</div>
